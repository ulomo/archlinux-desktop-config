! scroll
XTerm*saveLines: 1000
XTerm*scrollBar: false
XTerm*rightScrollBar: true
XTerm*scrollbar.thickness: 4
XTerm*scrollbar.background: #54537f
XTerm*scrollbar.foreground: #417df1 


! white space around
XTerm*internalBorder: 8

! cursor
XTerm*cursorBlink: true
XTerm*cursorUnderLine: true
XTerm*cursorColor: #f3715c


! font
!Liberation Mono:size=18:antialias=false !DejaVu Sans Mono:antialias=true:pixelsize=22 ! Iosevka Term:style=Regular
XTerm*faceName: Iosevka,Iosevka Nerd Font:style=Regular,Book 
XTerm*faceSize: 16
!XTerm*font: 4x23
XTerm.scaleHeight: 1.01



! disable underlined text, instead color it
XTerm.vt100.colorULMode: true
XTerm.vt100.colorUL: #78cdd1


! disable bold font faces, use color instead
XTerm.vt100.colorBDMode: true
XTerm.vt100.colorBD: #6766a9


! keybind: adjust-font-size click-action use-clipboard open-url scroll-page
XTerm*VT100.Translations: #override \n\
Ctrl <Key> minus: smaller-vt-font() \n\
Ctrl <Key> plus: larger-vt-font() \n\
Ctrl <Key> 0: set-vt-font(d) \n\
<Btn1Up>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
<Btn3Down>: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
Shift Ctrl <Key> C: copy-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
Shift Ctrl <Key> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
Ctrl <Btn1Down>: exec-formatted("xdg-open '%t'", CLIPBOARD) \n\
<KeyPress> Home : scroll-to(begin) \n\
<KeyPress> End  : scroll-to(end) 


! define color
XTerm.vt100.foreground: #839496
XTerm.vt100.background: #1C2B40

! italic color
XTerm*colorITMode: true
XTerm*colorIT: #78cdd1

*.color0:  #000000
*.color8:  #767676

*.color1:  #C4A000
*.color9: #FCE94F

*.color2:  #d7989e
*.color10: #f173ac

*.color3:  #4bd129  
*.color11:  #8bd129

*.color4:  #4e72b8
*.color12: #80aecb

*.color5:  #75507B
*.color13: #AD7FA8

*.color6:  #76becc
*.color14: #29d1cc

*.color7:  #dddddd
*.color15: #ffffff
